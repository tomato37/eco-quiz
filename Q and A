  <style>
    body {
      font-family: 'Pretendard', 'Noto Sans KR', sans-serif;
      background: linear-gradient(135deg, #b2f2bb, #d0ebff);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      margin: 0;
    }

    .quiz-container {
      background: #fff;
      width: 100%;
      max-width: 480px;
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      animation: fadeIn 0.8s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .quiz-header {
      background: #37b24d;
      color: white;
      text-align: center;
      padding: 20px;
    }

    h1 {
      font-size: 1.6rem;
      margin: 0;
    }

    .quiz-body {
      padding: 25px;
    }

    .question {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 15px;
    }

    .options {
      list-style: none;
      padding: 0;
    }

    .options li {
      background: #f1f3f5;
      margin-bottom: 10px;
      padding: 12px 15px;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .options li:hover {
      background: #d8f5a2;
    }

    .btn {
      display: block;
      width: 100%;
      margin-top: 15px;
      background: #228be6;
      color: white;
      border: none;
      padding: 12px;
      border-radius: 10px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.2s ease;
    }

    .btn:disabled {
      background: #ced4da;
      cursor: not-allowed;
    }

    .btn:hover:not(:disabled) {
      background: #1c7ed6;
    }

    .result {
      text-align: center;
      font-size: 1.2rem;
      font-weight: 600;
      margin-top: 20px;
    }

    .restart {
      background: #40c057;
      margin-top: 15px;
    }

    .restart:hover {
      background: #37b24d;
    }
  </style>
